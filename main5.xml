<?xml version="1.0" encoding="UTF-8"?>
<theme defaultView="theme">
   <formatVersion>7</formatVersion>


<feature supported="carousel">
   <view name="system">
     <image name="logo">
       <linearSmooth>true</linearSmooth>
	   <path>./_inc/images/wheel_default.png</path>
	   <path>./${system.theme}/_inc/system1.png</path>  
	   </image>    

    <image name="header" extra="true">
       <pos>0.715 0.17</pos>
        <size>0.26 0.72</size>		
        <path>./_inc/system5.png</path>
        <zIndex>400</zIndex>
		<storyboard>
		  <animation property="offsetY" from="0" to="0.17" begin="0" duration="3500" mode="linear"/>			  
		  <animation property="opacity" from="0" to="1" duration="3500" mode="easeIn"/>
	      <animation property="scale" from="1" to="1.05" begin="3500" autoreverse="true" duration="1500" repeat="forever" mode="easeOut"/>
		</storyboard>		 
	   </image>	
	   
     <image name="header2" extra="true">
       <pos>0.098 -0.01</pos>
        <size>0.23 0.11</size>		
        <path>./_inc/system2.png</path>
        <zIndex>400</zIndex>
		<storyboard>
		  <animation property="offsetY" from="-0.1" to="0.012" begin="0" duration="700" mode="linear"/>		
		  <animation property="opacity" from="0" to="1" duration="700" mode="easeIn"/>
          <animation property="scale" from="0" to="1" duration="700" mode="easeOut"/> 
		</storyboard>		 
	   </image>	  
	   
	   
	 <video name="system-video1" extra="true">
        <default>./_inc/videos/_static.mp4</default>
        <path>{random}</path>  		
        <visible>true</visible>	 	 
        <rotation>0</rotation>  
        <roundCorners>0.02</roundCorners>             
        <pos>0.108 0.12</pos>
        <origin>0 0</origin>
        <size>0.585 0.785</size>
        <color>FFFFFF</color>
        <zIndex>5</zIndex>
        <storyboard>
        <animation property="opacity" from="0" to="1" duration="4500" mode="easeIn"/>
        </storyboard>		
     </video>  	 
      <text name="systemInfo">     
         <pos>0.35 0.03</pos>
		 <origin>0 0</origin>
         <backgroundColor>00000000</backgroundColor>
         <color>1a92d6</color>	 
         <fontPath>./_inc/fonts/moonhouse.ttf</fontPath>
	     <fontSize>0.085</fontSize>
         <zIndex>10</zIndex>
         <alignment>left</alignment>
      <glowColor>70c9fb</glowColor>
      <glowSize>5</glowSize>	  
      </text>
  	<image name="system-background" extra="true">	
       <path>./_inc/images/main1.png</path>	
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>1</zIndex> 		 
    </image>	  
   	<image name="system-background4" extra="true">	
       <path>./_inc/images/main43.png</path>	
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>3</zIndex> 		 
    </image>	
   	<image name="system-background6" extra="true">	
       <path>./_inc/images/main13.png</path>	
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>4</zIndex>
        <storyboard>
        <animation property="opacity" from="0" to="1" duration="4500" mode="easeIn"/>
        </storyboard> 		 
    </image>
   	<image name="system-background7" extra="true">	
       <path>./_inc/images/main33.png</path>	
         <pos>-0.1 0</pos>
         <size>1 1</size>
         <zIndex>6</zIndex>
        <storyboard>
        <animation property="opacity" from="0" to="1" duration="4500" mode="easeIn"/>
        </storyboard> 		 
    </image>	
	  <carousel name="systemcarousel">
          <zIndex>2</zIndex>
          <logoScale>1.01</logoScale>	      
          <type>horizontal</type>
          <pos>-0.1 0.113</pos>
          <size>1.2 0.86</size>
          <logoSize>0.75 0.758</logoSize>
          <color>00000000</color>
          <maxLogoCount>7</maxLogoCount>
          <logoAlignment>center</logoAlignment>		  
         </carousel>				 
   </view>
</feature>
 
</theme>