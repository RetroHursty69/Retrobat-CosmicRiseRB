<?xml version="1.0" encoding="UTF-8"?>
<theme defaultView="theme">
   <formatVersion>7</formatVersion>


<feature supported="carousel">
   <view name="system">
     <image name="logo">
       <linearSmooth>true</linearSmooth>
	   <path>./_inc/images/wheel_default.png</path>
	   <path>./${system.theme}/_inc/system1.png</path>  
	   </image>

     <image name="header" extra="true">
       <pos>0.018 0.08</pos>
        <size>0.36 0.175</size>		
        <path>./_inc/system2.png</path>
        <zIndex>400</zIndex>
		<storyboard>
		  <animation property="offsetY" from="-0.1" to="0.012" begin="0" duration="700" mode="linear"/>		
		  <animation property="opacity" from="0" to="1" duration="700" mode="easeIn"/>
          <animation property="scale" from="0" to="1" duration="700" mode="easeOut"/> 
		</storyboard>		 
	   </image>	    
	   
	   
	 <video name="system-video1" extra="true">
        <default>./_inc/videos/_static.mp4</default>
        <path>{random}</path>  		
        <visible>true</visible>	 	 
        <rotation>0</rotation>  
        <roundCorners>0.02</roundCorners>             
        <pos>0.019 0.305</pos>
        <origin>0 0</origin>
        <size>0.35 0.467</size>
        <color>FFFFFF</color>
        <zIndex>4</zIndex>
        <storyboard>
        <animation property="opacity" from="0" to="1" duration="550" mode="easeIn"/>
        <animation property="scale" from="0" to="1" duration="350" mode="easeOut"/>
        </storyboard>		
     </video>  	 
      <text name="systemInfo">     
         <pos>0.019 0.82</pos>
		 <origin>0 0</origin>
         <backgroundColor>00000000</backgroundColor>
         <color>791b97</color>	 
         <fontPath>./_inc/fonts/moonhouse.ttf</fontPath>
	     <fontSize>0.075</fontSize>
         <zIndex>10</zIndex>
         <alignment>left</alignment>
      <glowColor>d377f1</glowColor>
      <glowSize>5</glowSize>	  
      </text>    
   	<image name="system-background" extra="true">	
       <path>./_inc/images/main1.png</path>	
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>1</zIndex> 		 
    </image>
   	<image name="system-background2" extra="true">	
       <path>./_inc/images/main22.png</path>	
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>3</zIndex>		 
    </image>	
   	<image name="system-background3" extra="true">	
       <path>./_inc/images/main32.png</path>	
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>5</zIndex>
        <storyboard>
        <animation property="opacity" from="0" to="1" duration="450" mode="easeIn"/>
        <animation property="scale" from="0" to="1" duration="250" mode="easeOut"/>
        </storyboard> 		 
    </image>
   	<image name="system-background4" extra="true">	
       <path>./_inc/images/main42.png</path>	
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>6</zIndex> 		 
    </image>	
	
	  <carousel name="systemcarousel">
          <zIndex>2</zIndex>
          <logoScale>1.01</logoScale>	      
          <type>horizontal</type>
          <pos>0.0475 0.06</pos>
          <size>0.95 0.86</size>
          <logoSize>0.85 0.85</logoSize>
          <color>00000000</color>
          <maxLogoCount>5</maxLogoCount>
          <logoAlignment>center</logoAlignment>		  
         </carousel>			 
   </view>
</feature>
 
</theme>