<?xml version="1.0" encoding="UTF-8"?>
<theme defaultView="theme">
   <formatVersion>7</formatVersion>

   <view name="gamecarousel">
   
      <helpsystem name="help">
         <fontPath>./_inc/fonts/moonhouse.ttf</fontPath>
         <fontSize>0.019</fontSize>     
         <pos>0.025 0.95</pos>      
         <textColor>1a92d6</textColor>
         <iconColor>ffffff</iconColor>
      </helpsystem>

<gamecarousel name="gamecarousel">
          <zIndex>400</zIndex>	      
          <type>vertical_wheel</type>
          <pos>0.34 0</pos>
          <size>1 1</size>
          <logoSize>0.17 0.17</logoSize>
          <color>00000000</color>
          <maxLogoCount>19</maxLogoCount>
          <logoRotation>-7</logoRotation>
          <logoRotationOrigin>2.50 0.5</logoRotationOrigin>
          <logoAlignment>center</logoAlignment> 
		<imageSource>marquee</imageSource>		  
</gamecarousel> 
	 
     <video name="md_video">
        <default>./_inc/images/static.mp4</default>	  
         <origin>0.5 0.5</origin>
         <pos>0.458 0.468</pos>
         <maxSize>0.6 0.85</maxSize>
         <zIndex>6</zIndex>
         <delay>1.0</delay> 
        <roundCorners>0.02</roundCorners> 		 
         <showSnapshotNoVideo>true</showSnapshotNoVideo>
         <showSnapshotDelay>true</showSnapshotDelay>   		             
      </video>	
	  
      <image name="logo">
         <origin>0.0 0.0</origin>      
      </image>
	  
	  
      <image name="background20" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>        
         <path>./_inc/images/viewbottom.png</path>
         <zIndex>1</zIndex>          
      </image>
     <image name="background21" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>        
         <path>./_inc/images/carousel31.png</path>
         <zIndex>2</zIndex>          
      </image>
     <image name="background22" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>        
         <path>./_inc/images/carousel32.png</path>
         <zIndex>2</zIndex>          
      </image>		  
      <image name="background222" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>        
         <path>./_inc/images/shadeR.png</path>
         <zIndex>5</zIndex>          
      </image>	
      <image name="logo">
       <pos>-0.176 0.175</pos>
        <size>0.5 0.25</size>			
        <path>./_inc/system2.png</path>
        <zIndex>400</zIndex>
		<rotation>-90</rotation>
		<storyboard>
		  <animation property="offsetY" from="0.15" to="0.175" begin="0" duration="4000" mode="linearSmooth"/>			
		  <animation property="opacity" from="0" to="1" duration="3000" mode="easeIn"/>
          <animation property="scale" from="0" to="1" duration="3000" mode="easeOut"/> 
		  <animation property="opacity" from="1" to="0.3" duration="2000"  begin="5000" duration="2000" mode="easeOut"/> 
		</storyboard>			 
      </image> 
 
 
 
	  
</view>

 
</theme>